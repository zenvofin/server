{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "schedule": [
    "before 9am on Saturday"
  ],
  "timezone": "Europe/Kyiv",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "groupName": "all dependencies",
      "groupSlug": "all-updates"
    }
  ],
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "labels": [
    "dependencies"
  ],
  "prConcurrentLimit": 3,
  "prCreation": "immediate",
  "ignoreTests": false,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 9am on Saturday"
    ]
  }
}